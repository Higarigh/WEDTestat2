        <th>Author</th>
        <th>Rating</th>
        </tr>
        {{#each data}}
        {{#if this}}
        <tr>
        <td>{{title}}</td>
        <td>{{url}}</td>
        <td>{{author}}</td>
        <td>{{rating.value}}</td>
        <td><button onclick="upVote({{id}})">&uarr;</button></td>
        <td><button onclick="downVote({{id}})">&darr;</button></td>
        <td><button onclick="deleteLink({{id}})">DELETE</button></td>
        </tr>
        {{/if}}
        {{/each}}
